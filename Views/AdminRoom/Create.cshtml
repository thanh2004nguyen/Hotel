
@{
    ViewData["Title"] = "Create";
}

@model Room
<div class="container" style="min-height:100vh;min-height:40vh;background-color:white;padding:2rem">
    <h1 >Tạo phòng mới </h1>
<form asp-action="Create" method="post" enctype="multipart/form-data">

    @for (int i = 0; i < Model.roomProperties!.Count; i++)
    {
        var propertyList = Model.roomProperties.ToList();
        <div class="form-control">
            <label class="form-check-label">@propertyList[i].Name</label>
            <input hidden  name="PropertyId[@i]" value="@propertyList[i].Id">
            <input type="text" name="PropertyDetail[@i]" required>
             
        </div>
    }

    <div class="form-group">
        <label class="control-label">Loại Phòng</label>
        <select asp-for="RoomTypeID" class="form-control" asp-items="ViewBag.RoomTypeId"></select>
    </div>

    <label>Tiện Ích</label>
    @foreach (var unity in Model.Unities!)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="Unities" value="@unity.Id">
            <label class="form-check-label">@unity.Name</label>
        </div>
    }

    <label class="control-label mt-3">Hinh Anh</label>
    <input type="file" id="ImageFile" name="ImageFile" class="form-control-file" multiple />

    <button type="submit" class="btn btn-primary mt-5">Create Room</button>
</form>

</div>
