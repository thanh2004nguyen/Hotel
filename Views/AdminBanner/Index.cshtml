@model IEnumerable<Banner>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="min-height:100vh">
    <h1 class="mb-3">Quản lý Banner</h1>

    <a asp-action="Create" asp-controller="AdminBanner">Tạo banner mới</a>

    <table id="banner_table" class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tiêu đề</th>
                <th>Nội dung</th>
                <th>ảnh</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var img = $"~/images/{@item.Image}";
                <tr>
                    <td>@Html.DisplayFor(a=>item.Id)</td>
                    <td>@Html.DisplayFor(a=>item.Title)</td>
                    <td>@Html.DisplayFor(a=>item.Content)</td>
                    <td scope="col">
                        <img style="width:70px;height:70px" src="@Url.Content(img)" />
                    </td>

                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |

                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


