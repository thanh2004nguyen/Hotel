@model RoomProperty
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewData["Title"] = "Create";
}


<div class="container" style="min-height:40vh;background-color:white;padding:2rem">
    <h1 class="mb-3">Tạo Mới</h1>
    <form asp-action="Create" method="post">
        <div class="form-group d-flex align-items-center">
            <label style="min-width: 100px; margin-right: 10px;">Chọn Icon</label>
            <select name="selectedIconId" class="js-example-placeholder-single form-control" style="width: 300px;">
                <option value="">--Chọn Icon--</option>
                @foreach (var icon in ViewBag.IconList as List<IconClass>)
                {
                    <option value="@icon.Id" data-icon="@icon.Id">@icon.Icon</option>
                }
            </select>
        </div>

        <div class="form-group mt-3">
            <label class="control-label">Tên</label>
            <input asp-for="Name" class="form-control" style="width: 300px;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Xong</button>
    </form>
</div>
