@model IEnumerable<Amenities>
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewData["Title"] = "Index Amenities";
}

<h1 style="text-align:center">Quản lý tiện ích nghi</h1>
<div class="container" style="min-height:100vh;background-color:white;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; padding:1rem;padding-bottom:1rem">
    <p>
        <a asp-action="Create" role="button" class="btn btn-warning">Tạo Tiện Ích Mới</a>
    </p>
    <table id="table_unity" class="table table-hover table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Icon</th>
                <th class="text-center">Chủ đề</th>
                <th class="text-center">Tên Tiện Ích</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (item.IconClass != null)
                        {
                            @Html.Raw(item.IconClass.Icon)
                        }
                    </td>
                    <td class="text-center">
                        @if (item.AmenitiesTheme != null)
                        {
                            @item.AmenitiesTheme.Name
                        }
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Chỉnh Sửa</a> |
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa tiện ích này?');">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>