@model Hotel.Dtos.RegisterDto
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row" style="display:flex;justify-content:center;align-items:center;min-height:100vh;">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div>

                @if (ViewData.ContainsKey("ChangePassSuccessed"))
                {
                    <p class="alert alert-warning" role="alert">@ViewData["ChangePassSuccessed"]</p>
                }

                @if (ViewData.ContainsKey("Error"))
                {
                    <p class="alert alert-warning" role="alert">@ViewData["Error"]</p>
                }
                @if (ViewData.ContainsKey("Blocked"))
                {
                    <p class="alert alert-warning" role="alert">@ViewData["Blocked"]</p>
                }
                @if (ViewData.ContainsKey("Success"))
                {
                    <p class="alert alert-success" role="alert">@ViewData["Success"]</p>
                }

                @if (ViewData.ContainsKey("ErrorPassword"))
                {
                    <p class="alert alert-success" role="alert">@ViewData["ErrorPassword"]</p>
                }

            </div>

            <!-- Đăng ký người dùng -->
            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12" style=" min-width: 700px; transform:translateX(-20%);">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="card-title text-center mb-5 fw-light fs-5">Đăng ký</h2>
                        <form asp-action="Register" asp-controller="User" method="post" id="registrationForm" data-parsley-validate="">
                            <div class="mb-3">
                                <label for="Role" class="form-label" style="color: black; padding: 0;">Chức vụ</label>
                                <select asp-for="Role" class="form-select" style="color: black; border: 1px solid gray;">
                                    <option value="" disabled selected >Chọn chức vụ</option>
                                    <option value="employee">Nhân viên</option>
                                    <option value="admin">Quản trị viên</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <br />
                                <label for="inputUserName" style="color: black; padding: 0; ">Tên đăng nhập</label>
                                <input style="padding: 0 20px;" type="text" asp-for="Name" class="form-control" id="inputUserName" placeholder="Tên đăng nhập">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <br />
                                <label for="inputEmail" style="color: black; padding: 0">Email</label>
                                <input style="padding: 0 20px;" asp-for="Email" type="email" class="form-control" id="inputEmail" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <br />
                                <label for="inputPassword" style="color: black; padding: 0">Mật khẩu</label>
                                <input style="padding: 0 20px;" asp-for="Pass" type="password" class="form-control" id="inputPassword" placeholder="Mật khẩu">
                                <span asp-validation-for="Pass" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <br />
                                <label for="inputRepeatPassword" style="color: black; padding: 0">Xác nhận Mật khẩu</label>
                                <input style="padding: 0 20px;" asp-for="ConfirmPassword" type="password" class="form-control" id="inputRepeatPassword" placeholder="Xác nhận mật khẩu" data-parsley-equalto="#inputPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                                    Đăng ký
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



