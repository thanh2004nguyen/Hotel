@model Hotel.Models.RoomType
@{
    ViewData["Title"] = "Edit RoomType";
}

    <div class="container " style="min-height:100vh ;width:100vw; background-color:white;padding:2rem">
        <div style="display:flex;justify-content:space-between;align-items:center">
        <h1 class="mb-3">Sửa loại phòng</h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Trở lại danh sách</a>
    </div>
        </div>
        <div  bg bg-danger" style="width:100%">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden  asp-for="Id" value="@Model.Id" />
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" value="@Model.Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group" >
                    <label asp-for="Description" class="control-label"></label>
                    <textarea style="width:80vw; height:100px" asp-for="Description" value="@Model.Description" id="content-data" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Xong" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


<script>
    CKEDITOR.replace('content-data');
</script>



