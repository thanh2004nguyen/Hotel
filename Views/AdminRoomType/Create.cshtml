@model Hotel.Models.RoomType
@{
    ViewData["Title"] = "Create RoomType";
}

<div class="container" style="min-height:100vh;min-height:40vh;background-color:white;padding:0 2rem">
    <div style="display:flex;justify-content:space-between;align-items:center ">
    <h1 class="mb-3" >Tạo Loại Phòng Mới</h1>
    <div>
            <a asp-action="Index" role="button" class="btn btn-secondary">Back to List</a>
    </div>

    </div>
        <div class="col-md-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea style="width:50%; height:100px" asp-for="Description" id="content-data" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
<script>
    CKEDITOR.replace('content-data');
</script>







