@model Room
<div class="hero-wrap" style="background-image: url('@Url.Content("~/images/HP.png")');">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
			<div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
				<div class="text">
					
					<h1 class="mb-4 bread">Hình ảnh phòng</h1>
				</div>
			</div>
		</div>
	</div>
</div>



<section class="ftco-section ftc-no-pb ftc-no-pt">
	<div style="padding: 0px 40px 20px ">
		<div class="row">
           
			</div>
			<div class="col-md-12  wrap-about pb-md-5 ftco-animate" style="padding-top:0;padding-bottom:0">
			<div class="heading-section heading-section-wo-line pt-md-5 pl-md-5 mb-5" style="padding-bottom:0">
				<div class="ml-md-0" style="padding-bottom:">
						<span class="subheading">Welcome to Hùng Phát Hotel</span>
						<h2 class="mb-4">Chào mừng đến khách sạn của chúng tôi</h2>
					</div>
				</div>
			<div class="pb-md-5" style="padding-top:0;padding-bottom:0">

				<p style="padding-bottom:0">@Html.Raw(Model.RoomType.Description)</p>
					
					<ul class="ftco-social d-flex">
						<li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
						<li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
						<li class="ftco-animate"><a href="#"><span class="icon-google-plus"></span></a></li>
						<li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
					</ul>
				</div>
			</div>
		</div>
	
</section>

<section class="ftco-section" style="padding-bottom:0;padding-top:0">
    <div style="padding: 20px;padding-bottom:0">
        <div class="row">
            <div class="col-md-12 text-center heading-section ftco-animate">
                <h2 class="mb-4">Thư viện Hình ảnh</h2>
            </div>
        </div>
        <div class="row">
          
			@if (Model != null)
			{
				foreach (var img in Model.Images)
				{
					var link = $"~/images/{img.Url}";
					<div class="col-md-3 mb-4" >
						<a href="@Url.Content(link)" class="gallery image-popup img ftco-animate">
							<img src="@Url.Content(link)" alt="Image 1" class="img-fluid">
						</a>
					</div>
				}
			}
          

           
       
           
        </div>
    </div>
</section>
