@model IEnumerable<Room>
@{
    var list = Model.ToArray();
    var data = list[0].Details.Where(p => p.Name.Contains("giá")).AsQueryable();
}

<div class="hero-wrap mb-4" style="background-image: url('@Url.Content("~/images/HP.png")'); margin-top:-25px">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
			<div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
				<div class="text">

					<h1 class="mb-4 bread">Giá phòng</h1>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="d-md-flex mt-2 mb-4 mt-4 p-4"  style="width:100% ; flex-flow: wrap">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Loại phòng</th>
                @foreach(var i in data)
                {

                    <th scope="col">@Html.DisplayFor(r=>i.Name)</th>
                    
                }      
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(a=>i.RoomType.Type)</th>
                    @foreach(var detail in i.Details)
                    {
                        if (detail.Name.Contains("giá"))
                        {
                          <td>@Html.DisplayFor(a=>detail.Detail)</td>  
                        }
                        
                    }
                    
                  

                </tr>
            }
            
           
        
        </tbody>
    </table>
   

    
</div>
